
@{
    ViewData["Title"] = "Index";
}
<button class="btn btn-sm btn-primary m-2 " id="btnAddEmployee">Add Employee</button>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th>Salary</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody class="text-center"id="table_Data">

    </tbody>
</table>
<div class="modal fade modal" id="employeeModal" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Add Employee</h1>
                <button class="close text-danger" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="Name" />
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" placeholder="Enter State" class="form-control" id="State" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" placeholder="Enter City" class="form-control" id="City" />
                    </div>
                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Enter Salary" class="form-control" id="Salary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary"onclick="AddEmployee()"  id="AddEmployee">Save</button>
                <button class="btn btn-danger btn-default">Close</button>
            </div>

        </div>
    </div>

</div>
<div >
    <input type="hidden" id="IdHidden" value="@Url.Action("EmployeeList","Ajax")"/>
</div>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/CustomJsForAjax.js"></script>